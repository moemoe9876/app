/* --- END MAIN CONTENT PADDING --- */


/* --- OTHER UTILITIES --- */
@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}

/* Keyframes */
@keyframes accordion-down {
  from { height: 0px; }
  to { height: var(--radix-accordion-content-height); }
}

@keyframes accordion-up {
  from { height: var(--radix-accordion-content-height); }
  to { height: 0px; }
}
/* Add other keyframes */

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}
