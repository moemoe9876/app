# Dependencies
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# Testing
/coverage

# Next.js
/.next/
/out/

# Production
/build

# Misc
.DS_Store
*.pem
*.log # General log files
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# Environment variables - Contains secrets!
.env.local
.env.*.local # Ignore environment-specific local overrides (e.g., .env.development.local)
.env # Ignore base .env file if used locally

# Firebase Service Account Key - Highly sensitive credentials!
firebase-service-account.json # Use the EXACT filename of your key file

# TypeScript build info
*.tsbuildinfo

# Vercel deployment folder
.vercel

# Editor directories and files
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json
*.sublime-workspace

# Optional: Cursor-specific (if you want to ignore its config)
.cursor/

# Optional: Uploads directory (if you don't want to track user uploads)
/uploads/